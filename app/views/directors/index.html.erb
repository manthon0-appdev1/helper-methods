<h1>
  List of all directors
</h1>

<hr>

<div>
  <%= link_to "Add a new director", new_director_url%>

</div>

<hr>

<table>
  <tr>
    <th>
      ID
    </th>

    <th>
      Name
    </th>

    <th>
      Created at
    </th>

    <th>
      Updated at
    </th>

    <th>
    </th>
  </tr>

  <% @list_of_directors.each do |a_director| %>
  <tr>
    <td>
      <%= a_director.id %>
    </td>

    <td>
      <%= a_director.name %>
    </td>

    <td>
      <%= time_ago_in_words(a_director.created_at) %> ago
    </td>
    <td>
      <%= time_ago_in_words(a_director.updated_at) %> ago
    </td>

    <td>
      <%= link_to "Show details", a_director%>
    </td>
  </tr>
  <% end %>
</table>
