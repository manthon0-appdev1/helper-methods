<div>
  <div>
    <h1>
      Director #<%= @the_director.id %> details
    </h1>

    <div>
      <div>
        <%= link_to "Go back", directors_path%>
      </div>

      <div>
        <%= link_to "Edit movie", edit_director_path%>
      </div>

      <div>
        <%= link_to "Delete movie", director_path(@the_director), method: :delete %>
      </div>
    </div>

    <dl>
      <dt>
        Name
      </dt>
      <dd>
        <%= @the_director.name %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_director.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_director.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>
