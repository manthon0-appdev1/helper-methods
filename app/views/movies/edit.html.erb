<h1>Edit movie</h1>

<% @the_movie.errors.full_messages.each do |message| %>
  <p style="color: red;"><%= message %></p>
<% end %>

<%= form_with(url: movie_path(@the_movie.id), method: :patch) do %>
  <div>
    <%= label_tag :title_box, "Title"%>
    <%= text_field_tag "movie[title]", @the_movie.title, id: "title_box"%>
  </div>

  <div>
    <%= label_tag :description_box, "Description"%>
    <%= text_area_tag "movie[description]", @the_movie.description, id: "description_box", rows: 3 %>
    <%= button_tag "Update movie"%>

<% end %>  
